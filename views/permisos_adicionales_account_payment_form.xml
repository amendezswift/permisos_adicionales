<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="permisos_adicionales_account_payment_form" model="ir.ui.view">
    <field name="name">permisos.adicionales.account.payment.form</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <field name="payment_method_line_id" position="after">
        <field name="establecer_cuenta_destino" invisible="1"/>
      </field>
      <field name="destination_account_id" position="attributes">
        <attribute name="readonly">is_internal_transfer or state != 'draft' or not establecer_cuenta_destino</attribute>
      </field>
    </field>
  </record>
</odoo>