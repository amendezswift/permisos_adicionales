<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="permisos_adicionales_account_move_line_form" model="ir.ui.view">
    <field name="name">permisos.adicionales.account.move.line.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']"
        position="before">
        <field name="establece_precio_unitario" invisible="1" optional="hide" />
        <field name="move_type" invisible="1" optional="hide" />
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='price_unit']"
        position="attributes">
        <attribute name="readonly">not establece_precio_unitario and move_type not in ('in_invoice')</attribute>
      </xpath>
    </field>
  </record>
</odoo>