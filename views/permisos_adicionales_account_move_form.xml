<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="permisos_adicionales_account_move_form" model="ir.ui.view">
    <field name="name">permisos.adicionales.account.move.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <field name="invoice_date" position="before">
        <field name="establece_terminos_pago" invisible="1" />
      </field>
      <xpath expr="//div[@name='due_date']/field[@name='invoice_date_due']" position="attributes">
        <attribute name="readonly">not establece_terminos_pago or state != 'draft'</attribute>
      </xpath>
      <xpath expr="//div[@name='due_date']/field[@name='invoice_payment_term_id']"
        position="attributes">
        <attribute name="readonly">not establece_terminos_pago or state != 'draft'</attribute>
      </xpath>
    </field>
  </record>
</odoo>